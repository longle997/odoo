<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nursery_order_action" model="ir.actions.act_window">
        <field name="name">Order</field>
        <field name="res_model">nursery.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new order
            </p>
        </field>
    </record>

    <record id="view_nursery_order_list" model="ir.ui.view">
        <field name="name">nursery.order.list</field>
        <field name="model">nursery.order</field>
        <field name="arch" type="xml">
            <tree string="Orders">
                <field name="id"/>
                <field name="date_crate"/>
                <field name="customer_id"/>
                <field name="plant_id"/>
                <field name="state" decoration-success="state=='sold'" decoration-info="state=='confirm'" decoration-danger="state=='cancel'"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_order_form">
        <field name="name">nursery.order.form</field>
        <field name="model">nursery.order</field>
        <field name="arch" type="xml">
            <form string="Plant Order">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="draft,confirm,cancel" attrs="{'invisible': [('state', '=', 'sold')]}"/>
                    <!-- By assigning type="object" to our button, the Odoo framework will execute a Python method with name="increase_number_in_stock" on the given model. -->
                    <button name="sold" type="object" string="Sold" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                </header>
                <sheet>
                    <group col="4">
                        <group colspan="2">
                            <field name="plant_id"/>
                            <field name="customer_id"/>
                        </group>
                        <group colspan="2">
                            <field name="last_modification"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem name="Order"
        id="nursery_order_menu"
        action="nursery_order_action"
        parent="nursery_root_menu"/>

</odoo>