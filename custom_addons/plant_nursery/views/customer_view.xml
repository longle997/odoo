<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- must follow template standard, For example in record tag, it will be id field then model field and value of id is "view_yourModel_viewType" -->
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">nursery.customer.form</field>
        <field name="model">nursery.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <h1>
                        <field name="name" placeholder="Customer Name"/>
                    </h1>
                    <notebook>
                        <page string="Shop">
                            <group>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_kanban" model="ir.ui.view">
        <field name="name">nursery.customer.kanban</field>
        <field name="model">nursery.customer</field>
        <field name="arch" type="xml">
            <kanban>
                <!-- You need to add the id field to the kanban view (in any view) if you will be referencing it. -->
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('nursery.customer', 'image', record.id.raw_value)" alt="Customer Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name: <field name="name"/>
                                    </li>
                                    <li>
                                        Email: <field name="email"/>
                                    </li>
                                </ul>
                                <!-- <div style="width:50px;"><field name="image" widget="image"/></div> -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="nursery_customer_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">nursery.customer</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer
            </p>
        </field>
    </record>

    <menuitem name="Customer"
        id="nursery_customer_menu"
        action="nursery_customer_action"
        parent="nursery_root_menu"/>
</odoo>